<footer class="site-footer" role="contentinfo">
  <div class="footer-inner">
    <!-- Venstre kolonne: stor overskrift og email + copy -->
    <div class="footer-col left">
      <h2 class="footer-cta">Want to shape the future of packaging<br />with us?</h2>

      <div class="email-copy">
        <label for="email" class="visually-hidden"></label>
        <div class="email-box">
          <input id="email" class="email-input" readonly value="hello@toki.house" />
          <button id="copy-btn" class="copy-btn" aria-label="Kopier email">copy</button>
        </div>
      </div>
    </div>

    <!-- Midter kolonne: copyright / info -->
    <div class="footer-col center">
      <p class="meta">© TÓKI 2025 | hello@toki.house | Copenhagen</p>
    </div>

    <!-- Højre kolonne: sociale ikoner -->
    <div class="footer-col right">
      <nav class="social" aria-label="Sociale links">
        <a href="#" class="social-link" aria-label="Instagram">
          <!-- lille Instagram SVG -->
          <svg width="22" height="22" viewBox="0 0 24 24" fill="none" aria-hidden="true">
            <rect x="3" y="3" width="18" height="18" rx="5" stroke="currentColor" stroke-width="1.4"></rect>
            <circle cx="12" cy="12" r="3" stroke="currentColor" stroke-width="1.4" fill="none"></circle>
            <circle cx="17.5" cy="6.5" r="0.7" fill="currentColor"></circle>
          </svg>
        </a>

        <a href="#" class="social-link" aria-label="LinkedIn">
          <!-- lille LinkedIn SVG -->
          <svg width="22" height="22" viewBox="0 0 24 24" fill="none" aria-hidden="true">
            <rect x="3" y="3" width="18" height="18" rx="2" stroke="currentColor" stroke-width="1.4"></rect>
            <path d="M8 11v5" stroke="currentColor" stroke-width="1.4" stroke-linecap="round"></path>
            <path d="M8 9.5a1.1 1.1 0 1 0 0-2.2 1.1 1.1 0 0 0 0 2.2z" fill="currentColor"></path>
            <path d="M12.5 11v5" stroke="currentColor" stroke-width="1.4" stroke-linecap="round"></path>
            <path d="M12.5 8.5c1.1 0 2 0 2 1.5v0" stroke="currentColor" stroke-width="1.4" stroke-linecap="round"></path>
          </svg>
        </a>
      </nav>
    </div>
  </div>

  <script is:inline>
    // copy-knap funktionalitet
    const copyBtn = document.getElementById("copy-btn");
    const emailInput = document.getElementById("email");

    if (copyBtn && emailInput) {
      copyBtn.addEventListener("click", async () => {
        try {
          await navigator.clipboard.writeText(emailInput.value);
          // kort visuel bekræftelse
          const original = copyBtn.textContent;
          copyBtn.textContent = "copied";
          setTimeout(() => (copyBtn.textContent = original), 1200);
        } catch (err) {
          // fallback: select + execCommand (ældre browsere)
          emailInput.select();
          document.execCommand("copy");
          const original = copyBtn.textContent;
          copyBtn.textContent = "copied";
          setTimeout(() => (copyBtn.textContent = original), 1200);
        }
      });
    }
  </script>
</footer>

